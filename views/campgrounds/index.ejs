<%- include("../partials/header") %>


    <header class="jumbotron">
        <div class="container">
            <h1 class="jumbotron-text">Welcome to YelpCamp<i class="fas fa-campground"></i> </h1> 
            <p class="jumbotron-text">View campgrounds from all over the world</p>            
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
            <p>
                <form class="form-inline" action="/campgrounds" method="GET">
                    <div class="form-group">
                        <input class="form-control" type="text" name="search" placeholder="Search Campgrounds... ">
                        <input class="btn btn-default" type="submit" value="Search">
                    </div>
                </form>
            </p>
        </div>
    </header>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3>Most Popular Campgrounds</h3>
        </div>
    </div>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <div class="col-md-12">
            <% if(noMatch !== null) { %>
                <h3><%= noMatch %></h3>
                <p>
                    <form class="form-inline" action="/campgrounds" method="GET">
                        <div class="form-group">
                            <input class="form-control" type="text" name="search" placeholder="Search Campgrounds...">
                            <input class="btn btn-default" type="submit" value="Search">
                        </div>
                    </form>
                </p>
            <% } %>
        </div>
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail card">
                    <img src="<%= campground.image %>" alt="campground">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                        <div>
                            <span class="badge label-primary"><i class="fas fa-thumbs-up"></i> <%= campground.likes.length %></span>
                        </div>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include("../partials/footer") %>


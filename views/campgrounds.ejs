<%- include("partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="containter">
            <h1   h1>Welcome to YelpCamp</h1> 
            <p>View campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Most Popular Campgrounds</h3>
        </div>
    </div>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-auto col-sm-auto">
                <div class="img-thumbnail">
                    <img src="<%= campground.image %>" alt="campground">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include("partials/footer") %>

